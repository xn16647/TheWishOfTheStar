<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.lou.thewishofthestar.ui.Fragment.woker.StealFragment">
   <android.support.v7.widget.RecyclerView
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:id="@+id/recycler">
   </android.support.v7.widget.RecyclerView>

   <LinearLayout
       android:layout_width="wrap_content"
       android:layout_height="wrap_content"
       android:id="@+id/steal_linear"
       android:orientation="vertical"
       android:layout_gravity="center"
       android:visibility="gone">

      <ImageView
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:src="@mipmap/netwok_fault"
          />

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="网络不给力"
          android:textColor="#101010"
          android:layout_gravity="center"/>

      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="请检查网络连接后，点击重试"
          />

      <Button
          android:layout_width="90dp"
          android:layout_height="40dp"
          android:text="重试"
          android:background="#0510ec"
          android:textColor="#f7f5f5"
          android:layout_gravity="center"/>
   </LinearLayout>

</LinearLayout>
