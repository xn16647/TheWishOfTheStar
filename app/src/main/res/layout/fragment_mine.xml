<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Fragment.ProphesyFragment"
    tools:layout_editor_absoluteY="25dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_weight="1" />

        <ImageView
            android:id="@+id/mine_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:src="@mipmap/myself_message" />

        <ImageView
            android:id="@+id/mine_setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:src="@mipmap/myself_setting" />


    </LinearLayout>


    <android.support.constraint.ConstraintLayout
        android:id="@+id/gologin_Layout"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:visibility="gone">

        <ImageView
            android:id="@+id/unLogin_head"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="100dp"
            android:src="@mipmap/default_userimg"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/mine_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="65dp"
            android:layout_marginTop="290dp"
            android:text="登录后，享受更多精彩服务"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@+id/unLogin_btn"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/unLogin_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="36dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="48dp"
            android:background="#FFD700"
            android:text="登陆"
            android:textColor="#fff"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/unRegister_btn"
            app:layout_constraintTop_toBottomOf="@+id/mine_textview" />

        <Button
            android:id="@+id/unRegister_btn"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="36dp"
            android:background="#1E90FF"
            android:text="注册"
            android:textAllCaps="false"
            android:textColor="#ffffff"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBaseline_toBaselineOf="@id/unLogin_btn"
            app:layout_constraintDimensionRatio="H,1:3.5"
            app:layout_constraintLeft_toRightOf="@id/unLogin_btn"
            app:layout_constraintRight_toRightOf="parent" />
    </android.support.constraint.ConstraintLayout>

    <android.support.constraint.ConstraintLayout
        android:id="@+id/useful_logined_Layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">


        <ImageView
            android:id="@+id/useful_default_userimg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="60dp"
            android:src="@mipmap/default_userimg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/useful_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="13dp"
            android:layout_marginTop="18dp"
            android:text="TextView"
            android:textColor="#fff"
            android:textSize="14sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintStart_toEndOf="@+id/useful_default_userimg"
            app:layout_constraintTop_toTopOf="@+id/useful_default_userimg" />

        <TextView
            android:id="@+id/useful_myInfo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginLeft="10dp"
            android:layout_marginStart="13dp"
            android:text="我的信息"
            android:textColor="#fff"
            android:textSize="12sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBottom_toBottomOf="@+id/useful_default_userimg"
            app:layout_constraintStart_toEndOf="@+id/useful_default_userimg" />


        <TextView

            android:id="@+id/textView12"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="作品"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView13"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/textView13" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="帖子"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView14"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/textView12"
            app:layout_constraintRight_toLeftOf="@+id/textView14" />

        <TextView
            android:id="@+id/textView14"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="关注"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBaseline_toBaselineOf="@+id/textView15"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/textView13"
            app:layout_constraintRight_toLeftOf="@+id/textView15" />

        <TextView
            android:id="@+id/textView15"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_marginRight="8dp"
            android:layout_marginTop="45dp"
            android:gravity="center"
            android:text="粉丝"
            android:textColor="@color/gray"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/textView14"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/useful_default_userimg" />

        <TextView
            android:id="@+id/useful_opus"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="0"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@id/textView12"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/useful_invitation" />

        <TextView
            android:id="@+id/useful_invitation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@id/textView13"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/useful_opus"
            app:layout_constraintRight_toLeftOf="@id/useful_follow" />

        <TextView
            android:id="@+id/useful_follow"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@id/textView14"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/useful_invitation"
            app:layout_constraintRight_toLeftOf="@+id/useful_fans" />

        <TextView
            android:id="@+id/useful_fans"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            android:text="2"
            android:textColor="@color/colorPrimary"
            android:textSize="10sp"
            app:fontFamily="font/sans-serif-thin"
            app:layout_constraintBottom_toTopOf="@id/textView15"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintLeft_toRightOf="@id/useful_follow"
            app:layout_constraintRight_toRightOf="parent" />

        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_marginTop="10dp"
            android:background="#c3c3c3"
            app:layout_constraintTop_toBottomOf="@id/textView15" />


        <LinearLayout
            android:id="@+id/linear_group_img"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="2dp"
            android:weightSum="4"
            app:layout_constraintTop_toBottomOf="@id/view">

            <LinearLayout
                android:id="@+id/useful_unPayment"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/home_myself_obligation" />


                <TextView
                    android:text="待付款"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:fontFamily="fond/sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/useful_unUse"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/home_myself_useed" />

                <TextView
                    android:text="待使用"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:fontFamily="fond/sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/useful_unQuit"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/home_myself_sales_return" />

                <TextView
                    android:text="待退货"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:fontFamily="fond/sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <ImageView
                android:layout_width="5dp"
                android:layout_height="match_parent"
                android:src="@mipmap/home_myself_sqlit_line" />

            <LinearLayout
                android:layout_width="0dp"
                android:id="@+id/useful_order"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:src="@mipmap/home_myself_order_form" />

                <TextView
                    android:text="我的订单"
                    android:gravity="center"
                    android:textSize="10sp"
                    android:fontFamily="fond/sans-serif-thin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>

            </LinearLayout>


        </LinearLayout>


        <View
            android:id="@+id/view1"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c3c3c3"
            app:layout_constraintTop_toBottomOf="@id/linear_group_img" />

        <LinearLayout
            android:id="@+id/useful_pay"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/useful_gift"
            app:layout_constraintTop_toBottomOf="@id/view1">


            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="充值中心"
                android:textSize="12sp"
                app:fontFamily="font/sans-serif-thin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/jindou" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:text="0"
                android:textSize="10sp"
                app:fontFamily="font/sans-serif-thin" />

            <ImageView
                android:id="@+id/imageView22"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/home_myself_right_arrow" />

        </LinearLayout>

        <View
            android:id="@+id/view_lineview"
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:layout_marginTop="10dp"
            android:background="#eeeee5"
            app:layout_constraintBottom_toTopOf="@id/useful_collect"
            app:layout_constraintTop_toBottomOf="@id/useful_gift" />


        <LinearLayout
            android:id="@+id/useful_collect"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/view3"
            app:layout_constraintTop_toBottomOf="@id/view_lineview">

            <TextView
                android:id="@+id/textView22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="我的收藏"
                android:textSize="12sp"
                app:fontFamily="font/sans-serif-thin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/imageView23"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/home_myself_right_arrow" />


        </LinearLayout>


        <LinearLayout
            android:id="@+id/useful_hobby"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/view4"
            app:layout_constraintTop_toBottomOf="@id/view3">

            <TextView
                android:id="@+id/textView23"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="我的偏好"
                android:textSize="12sp"
                app:fontFamily="font/sans-serif-thin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />


            <ImageView
                android:id="@+id/imageView24"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/home_myself_right_arrow" />


        </LinearLayout>

        <View
            android:id="@+id/view3"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c3c3c3"
            app:layout_constraintBottom_toTopOf="@id/useful_collect"
            app:layout_constraintTop_toBottomOf="@id/useful_hobby" />

        <View
            android:id="@+id/view4"
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#c3c3c3"
            app:layout_constraintBottom_toTopOf="@id/useful_authentication"
            app:layout_constraintTop_toBottomOf="@id/useful_hobby" />


        <LinearLayout
            android:id="@+id/useful_authentication"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/view4">

            <TextView
                android:id="@+id/textView24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="我要认证"
                android:textSize="12sp"
                app:fontFamily="font/sans-serif-thin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="未认证"
                android:textColor="#ff0000"
                android:textSize="8sp"
                app:fontFamily="font/sans-serif-thin" />


            <ImageView
                android:id="@+id/imageView25"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/home_myself_right_arrow" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/useful_gift"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintBottom_toTopOf="@id/view_lineview"
            app:layout_constraintTop_toBottomOf="@id/useful_pay">

            <TextView
                android:id="@+id/textView20"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="礼物中心"
                android:textSize="12sp"
                app:fontFamily="font/sans-serif-thin" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"

                android:layout_weight="1" />


            <ImageView
                android:id="@+id/imageView21"
                android:layout_width="7dp"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:src="@mipmap/home_myself_right_arrow" />


        </LinearLayout>


    </android.support.constraint.ConstraintLayout>


</android.support.constraint.ConstraintLayout>