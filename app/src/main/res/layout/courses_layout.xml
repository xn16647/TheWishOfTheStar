<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:id="@+id/cardView2"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        app:cardCornerRadius="5dp"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/courses_img"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scaleType="fitXY"
            android:src="@mipmap/ic_launcher" />
    </android.support.v7.widget.CardView>



    <TextView
        android:id="@+id/courses_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:text="李冉冉"
        android:fontFamily="sans-serif-thin"
        android:textSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/cardView2"
        tools:layout_editor_absoluteX="0dp"
        tools:ignore="MissingConstraints" />


    <ImageView
        android:id="@+id/courses_lv"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="5dp"
        android:layout_width="20dp"
        android:layout_height="20dp"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        app:layout_constraintLeft_toRightOf="@id/courses_name"
        android:src="@mipmap/home_level_vip_red"/>

    <TextView
        android:layout_marginTop="5dp"
        android:background="@drawable/bian"
        app:layout_constraintTop_toBottomOf="@id/cardView2"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_width="40dp"
        android:textSize="6sp"
        android:fontFamily="sans-serif-thin"
        android:textColor="#4169E1"
        android:gravity="center"
        android:text="表演"
        android:layout_height="15dp" />

    <TextView
        android:id="@+id/courses_time"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-thin"
        android:textSize="8sp"
        android:textColor="#c3c3c3"
        android:text="嘿嘿嘿"
        app:layout_constraintTop_toBottomOf="@id/courses_name"
        app:layout_constraintLeft_toLeftOf="parent"/>


</android.support.constraint.ConstraintLayout>
