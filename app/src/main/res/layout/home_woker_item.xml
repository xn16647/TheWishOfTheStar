<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_masterwork_list_item_group"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingTop="@dimen/ts_15">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ts_12"
            android:orientation="horizontal">


            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/home_stu_img"
                android:layout_width="@dimen/ts_40"
                android:layout_height="@dimen/ts_40"
                android:scaleType="centerCrop"
                app:riv_oval="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ts_10"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/home_stu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:textSize="@dimen/ts_16" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_6"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_woke_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#999999"
                        android:textSize="@dimen/ts_14" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/ts_10"
                        android:text="来自"
                        android:textColor="#999999"
                        android:textSize="@dimen/ts_14" />

                    <TextView
                        android:id="@+id/home_work_from"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#535353"
                        android:textSize="@dimen/ts_14" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_16"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/home_content"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="@dimen/ts_18" />

                    <TextView
                        android:id="@+id/home_contentintro"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#000"
                        android:textSize="@dimen/ts_18" />


                </LinearLayout>


                <RelativeLayout
                    android:id="@+id/home_introimg_group"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_10">

                    <ImageView
                        android:id="@+id/home_introimg"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:adjustViewBounds="true"
                        android:maxHeight="236dp"
                        android:maxWidth="@dimen/ts_236"
                        android:scaleType="fitStart" />

                    <ImageView
                        android:id="@+id/home_audioimg"
                        android:layout_width="@dimen/ts_236"
                        android:layout_height="@dimen/ts_132"
                        android:src="@mipmap/play_music_bg"
                        android:visibility="gone" />

                    <RelativeLayout
                        android:id="@+id/home_audio_gorpu"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:visibility="gone">


                        <TextView
                            android:id="@+id/home_masterwork_listitem_audio_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/ts_33"
                            android:layout_marginTop="@dimen/ts_72"
                            android:textColor="#000"
                            android:textSize="@dimen/ts_12" />
                    </RelativeLayout>

                    <LinearLayout
                        android:id="@+id/home_video_group"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/ts_38"
                            android:layout_height="@dimen/ts_38"
                            android:src="@mipmap/play" />

                        <TextView
                            android:id="@+id/home_masterwork_listitem_video_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/ts_10"
                            android:textColor="#fff"
                            android:textSize="@dimen/ts_14" />

                    </LinearLayout>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ts_8"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="@dimen/ts_16"
                        android:layout_height="@dimen/ts_16"
                        android:src="@mipmap/label_flag" />

                    <TextView
                        android:id="@+id/home_masterwork_listitem_worktype"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/ts_8"
                        android:textSize="@dimen/ts_13" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:layout_marginTop="@dimen/ts_8"
            android:background="#f6f6f6" />

        <RelativeLayout
            android:id="@+id/home_teacher_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/ts_6"
            android:layout_marginTop="@dimen/ts_6">

            <ImageView
                android:layout_width="@dimen/ts_14"
                android:layout_height="@dimen/ts_14"
                android:layout_marginLeft="@dimen/ts_12"
                android:src="@mipmap/comment" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/ts_12"
                android:layout_marginTop="@dimen/ts_13"
                android:orientation="horizontal">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/home_teacherimg"
                    android:layout_width="@dimen/ts_40"
                    android:layout_height="@dimen/ts_40"
                    android:scaleType="centerCrop"
                    app:riv_oval="true" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/ts_10"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/home_teachername"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:textColor="#ec6d14"
                            android:textSize="@dimen/ts_16" />

                        <ImageView
                            android:id="@+id/home_teacherlevel"
                            android:layout_width="@dimen/ts_22"
                            android:layout_height="@dimen/ts_22" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/home_teacherintro"
                        android:layout_width="160dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/ts_3"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:textColor="#999999"
                        android:textSize="@dimen/ts_14" />
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/home__item_peep"
                android:layout_width="@dimen/ts_100"
                android:layout_height="@dimen/ts_32"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="@dimen/ts_12"
                android:background="@drawable/look_group_bg"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/home__item_peep_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#000" />

                <ImageView
                    android:layout_width="@dimen/ts_16"
                    android:layout_height="@dimen/ts_16"
                    android:layout_marginLeft="@dimen/ts_6"
                    android:src="@mipmap/play_small" />

            </LinearLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/home_masterwork_listitem_teacher_group_line"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="@dimen/ts_12"
            android:layout_marginRight="@dimen/ts_12"
            android:background="#f6f6f6" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_36">

            <LinearLayout
                android:id="@+id/home_masterwork_list_item_reply_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_reply_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reply_check_bg"
                    android:checked="false"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/reply_check_tv_bg" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_masterwork_list_item_praise_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <CheckBox
                    android:id="@+id/home_item_praise_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/praise_check_bg"
                    android:checked="false"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/praise_check_tv_bg" />

            </LinearLayout>


            <LinearLayout
                android:id="@+id/home_reward_group"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:visibility="visible">

                <CheckBox
                    android:id="@+id/home_masterwork_list_item_reward_cb"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/reward_check_bg"
                    android:checked="true"
                    android:paddingLeft="@dimen/ts_8"
                    android:textColor="@drawable/reward_check_tv_bg" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_masterwork_list_item_share"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@mipmap/share_default" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ts_10"
            android:background="#eeeeee"
            android:orientation="vertical">

        </LinearLayout>

    </LinearLayout>



</LinearLayout>